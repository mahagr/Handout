<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE install>
<install type="xmap_ext" version="1.5.0" method="upgrade">
        <name>Handout Plug-in - Xmap</name>
        <creationDate>April 2011</creationDate>
		<author>Kontent Design</author>
		<copyright>This extension is released under the GNU/GPL License</copyright>
		<authorEmail>support@kontendesign.com</authorEmail>
		<authorUrl>www.sharehandouts.com</authorUrl>
		<version>1.0</version>
        <description>Plug-in for Handout in the Xmap sitemap component</description>
        <files>
          <filename xmap_ext="com_handoutdoc">com_handoutdoc.php</filename>
        </files>
        <params>
                <param name="include_documents" type="list" default="1" label="Show Documents" description="Should we include documents into the sitemap?">
                        <option value="0">Never</option>
                        <option value="1">Always</option>
                        <option value="2">In XML Sitemap Only</option>
                        <option value="3">In HTML Sitemap Only</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="XML Sitemap" description="Options for the XML sitemap only" />
                <param name="cat_priority" type="list" default="0.5" label="Category Priority" description="Set the priority for the categories">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="0.0">0.0</option>
                        <option value="0.1">0.1</option>
                        <option value="0.2">0.2</option>
                        <option value="0.3">0.3</option>
                        <option value="0.4">0.4</option>
                        <option value="0.5">0.5</option>
                        <option value="0.6">0.6</option>
                        <option value="0.7">0.7</option>
                        <option value="0.8">0.8</option>
                        <option value="0.9">0.9</option>
                        <option value="1">1</option>
                </param>
                <param name="cat_changefreq" type="list" default="weekly" label="Category Change frequency" description="Set the chage frequency for the categories">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="always">Always</option>
                        <option value="hourly">Hourly</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="never">Never</option>
                </param>
                <param name="doc_priority" type="list" default="0.5" label="Documents Priority" description="Set the priority for the documents">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="0.0">0.0</option>
                        <option value="0.1">0.1</option>
                        <option value="0.2">0.2</option>
                        <option value="0.3">0.3</option>
                        <option value="0.4">0.4</option>
                        <option value="0.5">0.5</option>
                        <option value="0.6">0.6</option>
                        <option value="0.7">0.7</option>
                        <option value="0.8">0.8</option>
                        <option value="0.9">0.9</option>
                        <option value="1">1</option>
                </param>
                <param name="doc_changefreq" type="list" default="weekly" label="Documents Change frequency" description="Set the chage frequency for the documents">
                  <option value="-1">Use Parent Menu Settings</option>
                  <option value="always">Always</option>
                  <option value="hourly">Hourly</option>
                  <option value="daily">Daily</option>
                  <option value="weekly">Weekly</option>
                  <option value="monthly">Monthly</option>
                  <option value="yearly">Yearly</option>
                  <option value="never">Never</option>
                </param>
                <param name="doc_task" type="list" default="doc_details" label="Documents details" description="Set the show or not details/download documents">
                  <option value="-1">Use Parent Menu Settings</option>
                  <option value="doc_details">Details</option>
                  <option value="doc_download">Download</option>
                </param>
        </params>
</install>
